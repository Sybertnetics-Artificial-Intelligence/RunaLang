{
  "comments": {
    "lineComment": "Note:",
    "blockComment": ["Note:", ":End Note"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"], 
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(If|Otherwise if|Otherwise|Unless|When|Match|For|While|Loop|Try|Catch|Finally|Process|Type|Module)\\b.*:",
    "decreaseIndentPattern": "^\\s*(Otherwise|Catch|Finally)\\b"
  },
  "folding": {
    "markers": {
      "start": "^\\s*Note:\\s*$",
      "end": "^\\s*:End Note\\s*$"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*Note:\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": ".*:\\s*$",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
