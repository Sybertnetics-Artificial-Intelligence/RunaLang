{
  "name": "runa-language-support-v2",
  "displayName": "Runa Language Support v2.0",
  "description": "Comprehensive language support for Runa - the AI-first natural programming language",
  "version": "2.0.3",
  "publisher": "sybertnetics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sybertneticsaisolutions/runa.git"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Language Packs",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "runa",
    "natural language programming",
    "AI-first language",
    "mathematical symbols",
    "pseudocode"
  ],
  "icon": "assets/runa-icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:runa"
  ],
  "contributes": {
    "languages": [
      {
        "id": "runa",
        "aliases": [
          "Runa",
          "runa"
        ],
        "extensions": [
          ".runa"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/runa-file-light.svg",
          "dark": "./assets/runa-file-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "runa",
        "scopeName": "source.runa",
        "path": "./syntaxes/runa.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "runa",
        "path": "./snippets/runa.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Runa Language Configuration",
      "properties": {
        "runa.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Runa language server for advanced features"
        },
        "runa.languageServer.host": {
          "type": "string",
          "default": "localhost",
          "description": "Language server host address"
        },
        "runa.languageServer.port": {
          "type": "number",
          "default": 8080,
          "description": "Language server port number"
        },
        "runa.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code formatting"
        },
        "runa.formatting.convertSymbolsToWords": {
          "type": "boolean",
          "default": true,
          "description": "Automatically convert mathematical symbols to natural language"
        },
        "runa.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable error diagnostics and warnings"
        },
        "runa.diagnostics.mathSymbolEnforcement": {
          "type": "boolean",
          "default": true,
          "description": "Warn when mathematical symbols are used outside mathematical contexts"
        },
        "runa.compiler.path": {
          "type": "string",
          "default": "runa",
          "description": "Path to the Runa compiler executable"
        },
        "runa.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable intelligent code completion"
        },
        "runa.completion.includeBuiltins": {
          "type": "boolean",
          "default": true,
          "description": "Include built-in functions in code completion"
        }
      }
    },
    "commands": [
      {
        "command": "runa.compileFile",
        "title": "Compile Runa File",
        "category": "Runa",
        "icon": "$(gear)"
      },
      {
        "command": "runa.runFile",
        "title": "Run Runa File",
        "category": "Runa",
        "icon": "$(play)"
      },
      {
        "command": "runa.formatDocument",
        "title": "Format Document",
        "category": "Runa",
        "icon": "$(symbol-namespace)"
      },
      {
        "command": "runa.restartLanguageServer",
        "title": "Restart Language Server",
        "category": "Runa",
        "icon": "$(refresh)"
      },
      {
        "command": "runa.convertSymbolsToWords",
        "title": "Convert Mathematical Symbols to Words",
        "category": "Runa",
        "icon": "$(symbol-operator)"
      },
      {
        "command": "runa.newRunaFile",
        "title": "New Runa File",
        "category": "Runa",
        "icon": "$(new-file)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .runa",
          "command": "runa.compileFile",
          "group": "runa@1"
        },
        {
          "when": "resourceExtname == .runa",
          "command": "runa.runFile",
          "group": "runa@2"
        },
        {
          "when": "resourceExtname == .runa",
          "command": "runa.formatDocument",
          "group": "runa@3"
        },
        {
          "when": "resourceExtname == .runa",
          "command": "runa.convertSymbolsToWords",
          "group": "runa@4"
        }
      ],
      "editor/title": [
        {
          "when": "resourceExtname == .runa",
          "command": "runa.runFile",
          "group": "navigation@1"
        },
        {
          "when": "resourceExtname == .runa",
          "command": "runa.compileFile",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "runa.compileFile",
          "when": "resourceExtname == .runa"
        },
        {
          "command": "runa.runFile",
          "when": "resourceExtname == .runa"
        },
        {
          "command": "runa.formatDocument",
          "when": "resourceExtname == .runa"
        },
        {
          "command": "runa.convertSymbolsToWords",
          "when": "resourceExtname == .runa"
        }
      ],
      "explorer/context": [
        {
          "command": "runa.newRunaFile",
          "group": "navigation@10"
        }
      ]
    },
    "keybindings": [
      {
        "command": "runa.compileFile",
        "key": "ctrl+shift+b",
        "when": "resourceExtname == .runa"
      },
      {
        "command": "runa.runFile",
        "key": "ctrl+f5",
        "when": "resourceExtname == .runa"
      },
      {
        "command": "runa.formatDocument",
        "key": "shift+alt+f",
        "when": "resourceExtname == .runa"
      },
      {
        "command": "runa.convertSymbolsToWords",
        "key": "ctrl+shift+c",
        "when": "resourceExtname == .runa"
      }
    ],
    "themes": [
      {
        "label": "Runa Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/runa-dark.json"
      },
      {
        "label": "Runa Light",
        "uiTheme": "vs",
        "path": "./themes/runa-light.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vsce": "^1.97.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
