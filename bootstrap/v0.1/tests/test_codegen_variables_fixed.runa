// Test variable declarations and assignments (v0.0 compatible)
fn test_local_vars() -> i64 {
    let x: i64 = 10;
    let y: i64 = 20;
    return x + y;
}

fn test_assignment() -> i64 {
    let x: i64 = 5;
    x = 15;
    return x;
}

fn test_multiple_vars() -> i64 {
    let a: i64 = 1;
    let b: i64 = 2;
    let c: i64 = 3;
    let d: i64 = a + b;
    let e: i64 = c + d;
    return e;  // Should be 6
}

fn main() -> i64 {
    if (test_local_vars() != 30) {
        return 1;
    }
    if (test_assignment() != 15) {
        return 2;
    }
    if (test_multiple_vars() != 6) {
        return 3;
    }
    return 0;
}