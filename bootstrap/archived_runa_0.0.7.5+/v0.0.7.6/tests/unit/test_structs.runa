# Test structs: Type with fields
Type called "Point":
    x as Integer
    y as Integer
End Type

Process called "main" returns Integer:
    # Create a Point struct
    Let p be allocate(16)

    # Set fields (x at offset 0, y at offset 8)
    memory_set_integer(p, 0, 10)
    memory_set_integer(p, 8, 20)

    # Get and display fields
    Let x_val be memory_get_integer(p, 0)
    Let y_val be memory_get_integer(p, 8)

    Display x_val
    Display y_val

    deallocate(p)

    Return 0
End Process
