Type Point:
    x as Integer
    y as Integer
End Type

Process called "main" takes argc as Integer, argv as Integer returns Integer:
    print_string("Testing structs and field access")

    Let p be memory_allocate(16)
    memory_set_int32(p, 0, 10)
    memory_set_int32(p, 8, 20)

    Let x_val be memory_get_int32(p, 0)
    Let y_val be memory_get_int32(p, 8)

    print_string("Point x:")
    print_integer(x_val)
    print_string("Point y:")
    print_integer(y_val)

    print_string("✓ Structs (Type)")
    print_string("✓ Field access")

    Return 0
End Process
