# Test basic features one by one

Process called "test_variables" takes no arguments returns Integer:
    Let x be 42
    Let y be 100
    Let z be x plus y
    Return z
End Process

Process called "test_arithmetic" takes no arguments returns Integer:
    Let a be 10 plus 5
    Let b be 20 minus 3
    Let c be a plus b
    Return c
End Process

Process called "test_if_equal" takes no arguments returns Integer:
    Let x be 5
    If x is equal to 5:
        Return 1
    End If
    Return 0
End Process

Process called "test_if_less" takes no arguments returns Integer:
    Let x be 3
    If x is less than 10:
        Return 1
    End If
    Return 0
End Process

Process called "test_if_greater" takes no arguments returns Integer:
    Let x be 15
    If x is greater than 10:
        Return 1
    End If
    Return 0
End Process

Process called "test_while_simple" takes no arguments returns Integer:
    Let count be 0
    Let limit be 3
    While count is less than limit:
        Let count be count plus 1
    End While
    Return count
End Process

Process called "main" takes no arguments returns Integer:
    Let result1 be test_variables()
    Let result2 be test_arithmetic()
    Let result3 be test_if_equal()
    Let result4 be test_if_less()
    Let result5 be test_if_greater()
    Let result6 be test_while_simple()

    # Sum all results for final test
    Let total be result1 plus result2
    Let total be total plus result3
    Let total be total plus result4
    Let total be total plus result5
    Let total be total plus result6

    Return total
End Process