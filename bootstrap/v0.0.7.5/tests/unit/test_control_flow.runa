# Control Flow Test
# Tests if/else and while loops

Process called "main" returns Integer:
    # Test simple if statement
    Let flag be 1
    If flag is equal to 1:
        Set flag to 2
    End If

    If flag is not equal to 2:
        Return 1
    End If

    # Test if-otherwise
    Let result be 0
    If flag is equal to 3:
        Set result to 10
    Otherwise:
        Set result to 20
    End If

    If result is not equal to 20:
        Return 2
    End If

    # Test while loop
    Let counter be 0
    Let sum be 0
    Let continue_loop be 1

    While continue_loop is equal to 1:
        Set sum to sum plus counter
        Set counter to counter plus 1
        If counter is greater than 5:
            Set continue_loop to 0
        End If
    End While

    # Sum should be 0+1+2+3+4+5 = 15
    If sum is not equal to 15:
        Return 3
    End If

    # Test nested if
    Let x be 10
    Let y be 20
    If x is less than y:
        If y is greater than 15:
            Set result to 100
        Otherwise:
            Set result to 50
        End If
    Otherwise:
        Set result to 25
    End If

    If result is not equal to 100:
        Return 4
    End If

    # All control flow tests passed
    Return 0
End Process