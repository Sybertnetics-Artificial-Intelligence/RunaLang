Note: XML PARSER DATA STRUCTURES
Note: =====================================================================

Type called "XMLDocument":
    root_element as XMLElement
    xml_declaration as XMLDeclaration
    document_type as XMLDocumentType
    encoding as String
    version as String
    standalone as Boolean
    namespaces as Dictionary[String, String]

Type called "XMLElement":
    tag_name as String
    namespace_uri as String
    namespace_prefix as String
    attributes as Dictionary[String, String]
    text_content as String
    child_elements as List[XMLElement]
    parent_element as String
    line_number as Integer

Type called "XMLAttribute":
    name as String
    value as String
    namespace_uri as String
    namespace_prefix as String
    attribute_type as String

Type called "XMLDeclaration":
    version as String
    encoding as String
    standalone as String

Type called "XMLDocumentType":
    name as String
    public_id as String
    system_id as String
    internal_subset as String

Type called "ParserConfig":
    parser_type as String
    validation_enabled as Boolean
    namespace_aware as Boolean
    expand_entity_references as Boolean
    ignore_whitespace as Boolean
    coalescing as Boolean
    buffer_size as Integer

