Type called "NavigationBar":
    bar_id as String
    title as String
    left_items as List[NavigationItem]
    right_items as List[NavigationItem]
    style as String
    background_color as String
    tint_color as String
    is_translucent as Boolean
    hide_shadow as Boolean
